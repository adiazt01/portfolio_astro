---
const links = [
  { name: "Sobre mi", link: "about" },
  { name: "Proyectos", link: "projects" },
  { name: "Certificaciones", link: "certifications" },
];
---

<header
  class="flex sticky top-4 z-50 flex-row py-3 bg-black/70 rounded-xl bg-opacity-80 shadow-violet-950/25 shadow-lg backdrop-blur-md mt-4 items-center justify-center mx-auto w-10/12 md:max-w-[768px] md:mx-auto border-4 border-violet-950"
>
  <nav class="bg-yellow-300h-32">
    <ul class="flex flew-row gap-5">
      {
        links.map((link, i) => (
          <li class="px-3 py-1 hover:bg-white hover:bg-opacity-5 hover:scale-105 transition rounded-full">
            <a class="font-medium" href={`#${link.link}`}>
              <span class="text-indigo-200">{i + 1}.</span>
              <span>{link.name}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
