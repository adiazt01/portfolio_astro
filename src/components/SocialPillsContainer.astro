---
import Pillsmedia from "./Pillsmedia.astro";
import Github from "./icons/Github.astro";
import Gmail from "./icons/Gmail.astro";
import LinkedIn from "./icons/LinkedIn.astro";

---

<div class="mt-4 lg:mt-6">
    <ul class="flex flex-row flex-wrap gap-4 lg:gap-5">
      <li class="group transition hover:scale-105">
        <Pillsmedia
          href="https://www.linkedin.com/in/armando-diaz-291385251/"
        >
          <LinkedIn
            class="h-5 w-4 lg:h-6 lg:w-6 fill-indigo-500/50 transition group-hover:fill-indigo-300"
          />
          <span class="text-indigo-500/50 lg:text-xl font-bold transition group-hover:text-indigo-300"
            >LinkedIn</span
          >
        </Pillsmedia>
      </li>
      <li class="group transition hover:scale-105">
        <Pillsmedia href="https://github.com/adiazt01">
          <Github
            class="h-5 w-4 lg:h-6 lg:w-6 fill-indigo-500/50 transition group-hover:fill-indigo-300"
          />
          <span class="text-indigo-500/50 lg:text-xl font-bold transition group-hover:text-indigo-300"
            >Github</span
          >
        </Pillsmedia>
      </li>
      <li class="group transition hover:scale-105">
        <Pillsmedia href="https://github.com/adiazt01">
          <Gmail
            class="h-5 w-4 lg:h-6 lg:w-6 text-indigo-500/50 transition group-hover:text-indigo-300"
          />
          <span class="text-indigo-500/50 lg:text-xl font-bold transition group-hover:text-indigo-300"
            >armandodt2004@gmail.com</span
          >
        </Pillsmedia>
      </li>
    </ul>
  </div>